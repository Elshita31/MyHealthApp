<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0ece3"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/orang" />

    <Button
        android:id="@+id/btn_move_activity_data_satu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#596e79"
        android:text="Ayo Jaga Diri"
        android:textColor="#ffffff"
        android:textSize="10dp" />

    <Button
        android:id="@+id/btn_move_activity_data_dua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#c7b198"
        android:text="Cuci Tangan yang Benar"
        android:textColor="#ffffff"
        android:textSize="10dp" />

    <Button
        android:id="@+id/btn_move_activity_data_tiga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#596e79"
        android:text="Cara Pakai Masker yang Benar"
        android:textColor="#ffffff"
        android:textSize="10dp" />

    <Button
        android:id="@+id/btn_move_activity_data_empat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#c7b198"
        android:text="Pola Hidup Sehat"
        android:textColor="#ffffff"
        android:textSize="10dp" />


</LinearLayout>